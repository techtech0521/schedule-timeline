{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "composite": true,
    "outDir": "./dist-node",
    "emitDeclarationOnly": true
  },
  "include": ["vite.config.ts"],
  "exclude": ["node_modules"]
}
